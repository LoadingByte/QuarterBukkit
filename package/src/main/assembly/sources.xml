<?xml version="1.0" encoding="UTF-8"?>
<assembly
    xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
    <id>sources</id>
    <formats>
        <format>zip</format>
    </formats>
    <baseDirectory>${project.artifactId}-${project.version}-sources</baseDirectory>

    <fileSets>
        <!-- QuarterBukkit Sources Jar -->
        <fileSet>
            <directory>${project.parent.basedir}/plugin/target
            </directory>
            <outputDirectory>.</outputDirectory>
            <includes>
                <include>*-sources.jar</include>
            </includes>
        </fileSet>

        <!-- Integration Sources Jar -->
        <fileSet>
            <directory>${project.parent.basedir}/integration/target
            </directory>
            <outputDirectory>.</outputDirectory>
            <includes>
                <include>*-sources.jar</include>
            </includes>
        </fileSet>
    </fileSets>
</assembly>
